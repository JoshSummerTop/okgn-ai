<section id="hero" class="relative py-20 lg:py-32 bg-[#044a59] overflow-hidden">
  <!-- Animated Grid Background -->
  <div class="absolute inset-0">
    <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse">
          <path d="M 60 0 L 0 0 0 60" fill="none" stroke="rgba(35, 229, 191, 0.1)" stroke-width="1" />
        </pattern>
        <linearGradient id="waveGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" stop-color="rgba(35, 229, 191, 0.3)" />
          <stop offset="50%" stop-color="rgba(35, 208, 208, 0.2)" />
          <stop offset="100%" stop-color="rgba(255, 208, 146, 0.1)" />
        </linearGradient>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
    <!-- Animated Wave Lines -->
    <div class="absolute inset-0">
      <svg class="absolute top-0 left-0 w-full h-full" viewBox="0 0 1200 800" xmlns="http://www.w3.org/2000/svg">
        <path d="M0,400 Q300,200 600,400 T1200,400" fill="none" stroke="url(#waveGradient)" stroke-width="2" class="animate-pulse" />
        <path d="M0,300 Q400,100 800,300 T1200,300" fill="none" stroke="rgba(35, 229, 191, 0.2)" stroke-width="1" class="animate-pulse" style="animation-delay: 1s;" />
        <path d="M0,500 Q200,300 400,500 T800,500 Q1000,300 1200,500" fill="none" stroke="rgba(255, 208, 146, 0.15)" stroke-width="1" class="animate-pulse" style="animation-delay: 2s;" />
      </svg>
    </div>
    <!-- Floating Data Points -->
    <div class="absolute top-20 left-20 w-2 h-2 bg-[#23e5bf] rounded-full animate-ping"></div>
    <div class="absolute top-40 right-32 w-1 h-1 bg-[#ffd092] rounded-full animate-ping" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-32 left-40 w-1.5 h-1.5 bg-[#23d0d0] rounded-full animate-ping" style="animation-delay: 2s;"></div>
    <div class="absolute top-60 right-20 w-1 h-1 bg-[#23e5bf] rounded-full animate-ping" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-40 right-40 w-2 h-2 bg-[#fbb03b] rounded-full animate-ping" style="animation-delay: 1.5s;"></div>
  </div>
  <div class="container max-w-7xl mx-auto px-4 relative z-10">
    <div class="flex items-center">
      <div class="space-y-8">
        <div class="space-y-6">
          <span class="inline-flex items-center bg-[#23e5bf]/20 text-[#23e5bf] border border-[#23e5bf]/30 rounded-full px-3 py-1 text-sm font-semibold">
          <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
            <path d="M12 2L13.5 8.5L20 10L13.5 11.5L12 18L10.5 11.5L4 10L10.5 8.5L12 2Z"/>
          </svg>
            AI-Powered Solutions
          </span>
          <h1 class="text-4xl lg:text-5xl font-bold text-white leading-tight">
            Custom Chatbots<br>That <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#23e5bf] to-[#ffd092]">Transform</span> Business
          </h1>
          <p class="text-lg text-gray-300">Intelligent AI solutions that automate customer service and drive growth.</p>
          <div data-controller="chat-widget" class="flex max-w-md">
            <input  data-chat-widget-target="searchInput" type="text" placeholder="Ask us anything..." class="flex-1 px-4 py-3 rounded-l-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-[#23e5bf]" />
            <button data-chat-widget-target="sendButton" class="bg-gradient-to-r cursor-pointer from-[#23e5bf] to-[#ffd092] hover:bg-gradient-to-l text-[#044a59] font-semibold px-6 rounded-r-lg rounded-l-none">Submit</button>
          </div>
        </div>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#portfolio" class="border border-[#23e5bf] text-[#23e5bf] hover:bg-[#23e5bf]/10 bg-transparent font-semibold px-8 py-3 rounded-md text-center" data-controller="smooth-scroll" data-action="click->smooth-scroll#scrollTo">View Portfolio</a>
        </div>
      </div>
    </div>
  </div>
</section> 